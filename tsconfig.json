{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@components/*": ["./components/*"],
      "@components": ["./components"],
      "@views/*": ["./views/*"],
      "@views": ["./views"],
      "@data/*": ["./data/*"],
      "@data": ["./data"],
      "@hooks/*": ["./hooks/*"],
      "@hooks": ["./hooks"],
      "@context/*": ["./context/*"],
      "@context": ["./context"],
      "@styles/*": ["./styles/*"],
      "@styles": ["./styles"],
      "@types/*": ["./types/*"],
      "@types": ["./types"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
